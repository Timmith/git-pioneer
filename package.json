{
  "name": "work-timer",
  "version": "1.0.0",
  "description": "A work timer for deep work.",
  "main": "index.html",
  "private": true,
  "license": "UNLICENSED",
  "author": {
    "name": "Tomasz Dysinski",
    "email": "oz@bunnybones.com",
    "url": "https://github.com/bunnybones1"
  },
  "single-instance": true,
  "window": {
    "title": "WebGL on Windows example",
    "width": 1080,
    "height": 1920,
    "min_width": 240,
    "min_height": 160,
    "resizable": true,
    "toolbar": true,
    "frame": false 
  },
  "dependencies": {
    "clamp": "^1.0.1",
    "eases": "^1.0.8",
    "glslify": "^6.1.0",
    "input-unified-pointers": "^2.2.2",
    "load-bmfont": "^1.3.0",
    "mobile-detect": "^1.3.7",
    "nice-color-palettes": "^2.0.0",
    "raf-tweener": "^3.0.4",
    "three": "^0.87.1",
    "three-bmfont-text": "^2.2.1",
    "threejs-managed-view": "^6.0.0",
    "urlparam": "^1.0.2"
  },
  "devDependencies": {
    "browserify": "^14.5.0",
    "budo": "^10.0.4",
    "uglify-js": "^3.1.1"
  },
  "scripts": {
    "test": "budo index.js --live --open -- -t glslify",
    "nw": "nwjs.app/Contents/MacOS/nwjs .",
    "webgl": "budo index.js --live --open -- -t glslify",
    "build": "browserify -t glslify index.js -o bundle.js && uglifyjs bundle.js -m -c -o bundle.min.js"
  },
  "chromium-args": "--enable-webgl --ignore-gpu-blacklist --use-gl=desktop",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git://github.com/bunnybones1/work-timer.git"
  },
  "homepage": "https://github.com/bunnybones1/work-timer",
  "bugs": {
    "url": "https://github.com/bunnybones1/work-timer/issues"
  }
}
